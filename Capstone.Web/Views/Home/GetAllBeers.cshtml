@using Capstone.Web.Models
@model List<Beer>
    <style>
        .text{
            color:white;
            font-weight:bold;
            text-align:center

        }
        
        .jumb {
            background-color:black;
            opacity: 0.8;
            filter: alpha(opacity=70); 
        }
        .pad{
            margin-top:10px;
        }
        .border{
            border-bottom:solid thin grey;
        }
        .beerImg{
            width:40%;
           
        }
        .abv{
            font-size:25px;
        }
        .beerText{
            font-weight:bold;
            font-size:80px;
        }
    </style>

    <div class="container jumbotron vertical-center jumb">
        <h1 class="beerText text pad" style="border-bottom:solid thick grey ">Beer Descriptions</h1>
        @foreach (Beer beer in Model)
    {
        
        <div class="row align-content-center pad col-lg-12">
            <div class="col-lg-12 row text abv">
                <a href=@Url.Action("BeerDetail", "Home", new { beerID = beer.BreweryId }, null)>
                    @beer.Name
                </a>
              
            </div>
            <div>
                <img class="beerImg" src="~/Photos/beerback3.jpg" />
            </div>
        </div>
        <div>
            <p class="col-lg-12 row">
                <span class="jumbotron">@beer.Description</span>
            </p>
        </div>

        <div class="col-lg-12 row border abv"><span class="jumbotron" style="width:20%">ABV @beer.AlcoholByVolume</span></div>

}


        <div>

        </div>
    </div>

